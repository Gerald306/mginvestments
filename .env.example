# MG Investments Environment Variables
# Copy this file to .env and fill in your actual values

# Firebase Configuration (already configured)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# MTN MoMo API Configuration
# Get these from MTN Developer Portal: https://momodeveloper.mtn.com/
# Collection API (for receiving payments)
VITE_MTN_COLLECTION_API_USER_ID=your-collection-api-user-id
VITE_MTN_COLLECTION_API_KEY=your-collection-api-key
VITE_MTN_COLLECTION_PRIMARY_KEY=your-collection-primary-key

# Remittance API (for sending money - optional)
VITE_MTN_REMITTANCE_API_USER_ID=your-remittance-api-user-id
VITE_MTN_REMITTANCE_API_KEY=your-remittance-api-key
VITE_MTN_REMITTANCE_PRIMARY_KEY=your-remittance-primary-key

# MTN Environment (sandbox for testing, production for live)
VITE_MTN_ENVIRONMENT=sandbox

# Payment API Configuration
REACT_APP_PAYMENT_API_URL=http://localhost:3001/api

# Other API Keys (when available)
REACT_APP_AIRTEL_MONEY_API_KEY=your-airtel-api-key
REACT_APP_STANBIC_BANK_API_KEY=your-stanbic-api-key

# Application Settings
REACT_APP_APP_NAME=MG Investments
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development
